{%- set lazyImage = "data:image/svg+xml,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%201%201'%20height%3D'500'%20width%3D'960'%20style%3D'background-color%3Argb(203%2C213%2C224)'%2F%3E" -%}
{% for post in paged.posts %}
<div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
    <div class="rounded shadow-md h-full flex flex-col">
        <a href="{{ post.url | url }}" class="block h-[180px] overflow-hidden rounded-t">
            <img 
                class="w-full h-full object-cover lazy" 
                src="{{ lazyImage }}" 
                data-src="{% if post.data.thumb %}{{ post.data.thumb | url }}{% else %}{{ '/assets/img/no-image.svg' | url }}{% endif %}" 
                alt="This post thumbnail">
        </a>
        <div class="px-6 py-5 flex-1 flex flex-col justify-between">
            <div>
                <div class="font-semibold text-lg mb-2">
                    <a class="text-slate-900 hover:text-slate-700" href="{{ post.url | url }}">{{ post.data.title }}</a>
                </div>
                <p class="text-slate-700 mb-1" title="Published date">{{ post.data.page.date | readableDate }}</p>
            </div>
            <div class="mt-3 text-center">
                {% for tag in post.data.tags %}
                    <a href="{{ '/tags/' | url }}{{ tag }}" class="inline-block bg-slate-200 rounded-full px-3 py-1 text-sm font-medium text-slate-700 m-0.5">#{{ tag }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endfor %}
